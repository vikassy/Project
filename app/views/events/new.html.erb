<% if @event.errors.any? %>
<% @event.errors.full_messages.each do |f| %><br />
<%= f %><br />
<% end %>
<% end %>
<%= form_for(@event) do |f| %>
<%= f.label :name %><br />
<%= f.text_field :name %><br />
<%= f.label :description %><br />
<%= f.text_area :description %><br />
<%= f.label :venue %><br />
<%= f.text_area :venue %><br />
Private<%= f.radio_button :avail , "1" %><br />
Public<%= f.radio_button :avail , "0" %><br />
<%= f.label :group_tokens , "Send Invitations to group" %><br />
<%= f.text_field :group_tokens %><br />
<%= f.label :member_tokens , "Send Invitations to members" %><br />
<%= f.text_field :member_tokens %><br />
<%= f.submit 'Create Event' %>
<% end %>